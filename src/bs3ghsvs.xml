				<field name="log" type="list" default="0" filter="integer"
					label="GHSVS_LOG"
					description="GHSVS_LOG_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				</field>

				<field name="loadBootstrapEarly" type="list" default="1" filter="integer"
